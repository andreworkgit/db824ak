<div id="page-wrapper">
<div class="row">
  <div class="col-lg-12">
    <h1>Edit usu√°rio <small>Enter Your Data</small></h1>
    <ol class="breadcrumb">
      <li><a href="index.html"><i class="fa fa-dashboard"></i> Dashboard</a></li>
      <li><a href="/user"><i class="fa fa-table"></i> List User</a></li>
      <li class="active"><i class="fa fa-edit"></i> Forms</li>
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">

    <form role="form" method="POST" action="/user/update/<%- user.id %>" class="form-edit">

      <div class="form-group">
        <label>Nome</label>
        <input class="form-control" name="name" value="<%- user.name %>">
        <p class="help-block">Example block-level help text here.</p>
      </div>

      <!--<div class="form-group has-error">
        <label class="control-label" for="inputError">Input with error</label>
        <input type="text" class="form-control" id="inputError">
      </div>-->

      <div class="form-group">
        <label>Title</label>
        <input class="form-control" name="title" value="<%- user.title %>">
        <p class="help-block">Example block-level help text here.</p>
      </div>

      <div class="form-group">
        <label>E-mail</label>
        <input class="form-control" name="email" value="<%- user.email %>">
        <p class="help-block">Example block-level help text here.</p>
      </div>

      <label>
        <input type="hidden" name="admin" value="unchecked">
        <input type="checkbox" name="admin" <% if(user.admin) { %> checked <% } %>>
        Admin
      </label>

      <button type="submit" class="btn btn-default">Update</button>
      <button type="reset" class="btn btn-default">Reset</button>
      <input type="hidden" name="_csrf" value="<%= _csrf %>">   

    </form>

  </div>

</div>
</div>